<Window x:Class="u2_02_SebastianH_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u2_02_SebastianH_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label x:Name="lblTitle"
                   Content="Please Type your name"/>
            <TextBox x:Name="entryName" 
                     Text="Your Name" FontStyle="Italic"/>
            <Label x:Name="lblOutput"
                   Content=""/>
            <Button x:Name="btnShowGreeting" Height="40"
                    Click="btnShowGreeting_Click" Content="Next" FontSize="30" Margin="179,0,185,0"/>



        </StackPanel>
    </Grid>
</Window>
